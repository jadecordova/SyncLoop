<Application x:Class="SyncLoop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SyncLoop"
             Exit="Application_Exit"
             ShutdownMode="OnMainWindowClose"
             StartupUri="TextEditor.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- SYNCLOOP DICTIONARIES -->
                <ResourceDictionary Source="pack://application:,,,/SyncLoopLibrary;component/Dictionaries/Values.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/SyncLoopLibrary;component/Dictionaries/Styles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/SyncLoopLibrary;component/Dictionaries/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
