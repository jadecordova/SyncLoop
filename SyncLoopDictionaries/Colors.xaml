<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- COLORS -->
    <Color x:Key="HighlightColor" A="255" R="230" G="230" B="245"/>
    <Color x:Key="TextColor" A="255" R="0" G="0" B="0"/>
    <Color x:Key="HighlightTextColor" A="255" R="65" G="105" B="225"/>
    <Color x:Key="BorderColor" A="255" R="200" G="200" B="200"/>

    <!-- BRUSHES -->
    <SolidColorBrush x:Key="HighlightBrush" Color="{StaticResource HighlightColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="HighlightText" Color="{StaticResource HighlightTextColor}" />
    
</ResourceDictionary>